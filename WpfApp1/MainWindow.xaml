<Window x:Class="WordsMarker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height='1*' />
            <RowDefinition Height='4*' />
            <RowDefinition Height='2*' />
        </Grid.RowDefinitions>
        <Button Grid.Row="3" Content="Button"  VerticalAlignment="Top" MaxWidth="155" Height="66" Click="Button_Click"/>
        <StackPanel Grid.Row="1">
            
                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Label  Grid.Column="0">Key</Label>

                <TextBox x:Name="GUI_key" Grid.Column="1" Margin="0,2,0,0"></TextBox>
                
            </Grid>
            
        </StackPanel>
    </Grid>
</Window>
